<div
  class='wrapper-div flex-column w-50 align-items-center justify-content-center'
>
  <!-- Sign up Form Title -->
  <h2>Create Account</h2>
  <form id='sign-up-form'>
    <div class='form-group'>
      <!-- First Name Field -->
      <label for='sign-up-first-name'>First Name:</label>
      <input id='sign-up-first-name' type='text' />
    </div>
    <div class='form-group'>
      <!-- Last Name Field -->
      <label for='sign-up-last-name'>Last Name:</label>
      <input id='sign-up-last-name' type='text' />
    </div>
    <div class='form-group'>
      <!-- Email Field -->
      <label for='sign-up-email'>Email:</label>
      <input id='sign-up-email' type='email' />
    </div>
    <div class='form-group'>
      <!-- Password Field -->
      <label for='sign-up-password'>Password:</label>
      <input id='sign-up-password' type='password' />
    </div>
    <!-- Submit Button -->
    <button type='submit'>SIGN UP</button>
  </form>
  <!-- Error Message -->
  <div id='error' class='red-error'></div>
</div>

<script src='/js/signup.js'></script>