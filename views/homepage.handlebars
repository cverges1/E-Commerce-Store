<div>
  <!-- On Sale Products Section -->
  <section class="product-section">
    <h3 class="text-align-center section-title top-title">On Sale</h3>
    <div class="flex-row w-100">
      {{#each saleProducts as |Product|}}
        <div class="flex-item col card" id="responsive-cards">
          <a href="/product/{{Product.id}}" class="product-a-tags">
            <img src="{{Product.image}}" alt="" class="product-img"/>
            <div class="product-text">
              <p class="text-align-center product-name">{{Product.name}}</p>
              <p class="text-align-center product-price">{{Product.price}}</p>
            </div>
          </a>
        </div>
      {{/each}}
    </div>
  </section>

  <!-- Categories Section -->
  <section class="product-section">
    <h3 class="text-align-center section-title">Categories</h3>
    <div class="flex-row w-100 justify-around">
      {{#each allCategories as |Category|}}
        <a href="/category/{{Category.id}}">
          <div>
            <img src="{{Category.image}}" alt="" class="product-img" />
          </div>
        </a>
      {{/each}}
    </div>
  </section>

  <!-- New Arrivals Section -->
  <section class="product-section">
    <h3 class="text-align-center section-title">New Arrivals</h3>
    <div class="flex-row w-100">
      {{#each newProducts as |Product|}}
        <div class="flex-item col card" id="responsive-cardss">
          <a href="/product/{{Product.id}}" class="product-a-tags">
            <img src="{{Product.image}}" alt="" class="product-img"/>
            <div class="text-bottom">
              <p class="text-align-center product-name">{{Product.name}}</p>
              <p class="text-align-center product-price">{{Product.price}}</p>
            </div>
          </a>
        </div>
      {{/each}}
    </div>
  </section>