<div>
  <section class="product-section">
    <h4 class="text-align-center">On Sale</h4>
    <div class="flex-row w-100">
      {{#each saleProducts as |Product|}}
        <div class="flex-item col">
          <a href="/product/{{Product.id}}">
            <img src="{{Product.image}}" alt="" class="product-img"/>
            <div class="product-text">
            <p class="text-align-center">{{Product.name}}</p>
            <p class="text-align-center">{{Product.price}}</p>
            </div>
          </a>
        </div>
      {{/each}}
    </div>
  </section>

  <section class="product-section">
    <h4 class="text-align-center">Categories</h4>
    <div class="flex-row w-100 justify-around">
      {{#each allCategories as |Category|}}
        <a href="/category/{{Category.id}}">
          <div>
            <img src="{{Category.image}}" alt="" class="product-img" />
            {{!-- <p>{{Category.name}}</p> --}}
          </div>
        </a>
      {{/each}}
    </div>
  </section>

  <div>
  <section class="product-section">
