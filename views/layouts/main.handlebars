<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Happy Tails</title>
    <link rel='stylesheet' href='/css/jass.css' />
    <link rel='stylesheet' href='/css/style.css' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM'
      crossorigin='anonymous'
    />
  </head>
  <body>
    <header id='nav-wrapper'>
      <nav id='nav'>
        <div class='navbar-left'>
          <a href='/'>Happy Tails</a>
        </div>
        <div class='navbar-right'>
          <ul>
            {{#if loggedIn}}
              <li id='logout'><a href='#'>Logout</a></li>
              <li><a href='#'>Shopping Cart</a></li>

            {{else}}
              <li><a href='/signup'>Sign Up</a></li>
              <li><a href='/login'>Login</a></li>
            {{/if}}
          </ul>
        </div>
      </nav>
    </header>

    {{{body}}}

    <footer>
      <section id='email-sign-up' class='e-mail-signup'>
        <div class='newsletter-text'>SIGN UP FOR OUR NEWSLETTER</div>
        <div class='email-box'>
          <input type='text' placeholder='E-mail' />
          <button>SEND</button>
        </div>
      </section>
      <div id='grouped-sections'>
        <section class='footer-section'>
          <!-- CUSTOMER SUPPORT section -->
          <h4 class='section-title'>CUSTOMER SUPPORT</h4>
          <ul class='section-list'>
            <li>About us</li>
            <li>Payment Methods</li>
            <li>Return Policy</li>
            <li>FAQ</li>
          </ul>
        </section>
        <section class='footer-section'>
          <!-- PRIVACY section -->
          <h4 class='section-title'>PRIVACY</h4>
          <ul class='section-list'>
            <li>Terms &amp; Conditions</li>
            <li>Cookies and Tracking</li>
            <li>Third-Party Disclosure</li>
          </ul>
        </section>
        <section class='footer-section'>
          <!-- PRODUCTS section -->
          <h4 class='section-title'>CATEGORIES</h4>
          <ul class='section-list'>
            <a href='/category/1' class='footer-a-tags'><li>Food</li></a>
            <a href='/category/2' class='footer-a-tags'><li>Toys</li></a>
            <a href='/category/3' class='footer-a-tags'><li>Leashes</li></a>
            <a href='/category/4' class='footer-a-tags'><li>Beds</li></a>
          </ul>
        </section>
        <section class='footer-section'>
          <!-- CONTACT US section -->
          <h4 class='section-title'>CONTACT US</h4>
          <ul class='section-list'>
            <li>Phone: +1-xxx-xxx-xxxx</li>
            <li>Email: example@gmail.com</li>
            <li>Address: 123 Example Ave, City Country</li>
          </ul>
        </section>
      </div>
      <p class='footer-bottom'>Â© 2023 HappyTails</p>
    </footer>
    <script src='/js/logout.js'></script>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz'
      crossorigin='anonymous'
    ></script>
  </body>
</html>